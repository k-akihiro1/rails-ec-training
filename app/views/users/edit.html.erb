<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html lang="ja">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>ユーザー情報修正</title>
</head>

<body>
  <main>
    <h2 class="text-center mt-5">ユーザ情報修正</h2>
    <%= form_with model: @user, local: true do |form|%>
      <%= flash[:success] %>
      <%= flash[:error] %>
      <table width="50%" style="margin-left:350px">
        <tr height="40">
          <td align="center">
            氏名
          </td>
          <td>
            <%= form.label :first_name, "姓" %>
            <%= form.text_field :first_name %>
            <%= form.label :last_name, "名" %>
            <%= form.text_field :last_name %>
          </td>
        </tr>

        <tr height="40">
          <td align="center">
            住所
          </td>
          <td colspan="2">
            <%= form.label :zipcode, "〒" %>
            <%= form.text_field :zipcode %>
          </td>
        </tr>

        <tr height="40">
          <td colspan="2">
            <%= form.label :prefecture, "都道府県" %>
            <%= form.text_field :prefecture %>
          </td>
        </tr>

        <tr height="40">
          <td>
            <%= form.label :municipality, "市町村区" %>
            <%= form.text_field :municipality %>
          </td>
        </tr>

        <tr height="40">
          <td>
            <%= form.label :address, "番地" %>
            <%= form.text_field :address %>
          </td>
        </tr>

        <tr height="40">
          <td>
            <%= form.label :apartments, "マンション　部屋番号" %>
            <%= form.text_field :apartments %>
          </td>
        </tr>

        <tr height="40">
          <td>
            <%= form.label :email, "メールアドレス" %>
            <%= form.text_field :email %>
          </td>
        </tr>

        <tr height="40">
          <td>
            <%= form.label :phone_number, "電話番号" %>
            <%= form.text_field :phone_number %>
          </td>
        </tr>

        <tr height="40">
          <td>
            <%= form.label :password, "パスワード" %>
            <%= form.password_field :password %>
          </td>
        </tr>

        <tr height="40">
          <td>
            <%= form.label :password_confirmation, "パスワード（再入力）" %>
            <%= form.password_field :password_confirmation %>
          </td>
        </tr>
      </table>

      <div class="row mt-5">
        <div class="col-5">
          <div class="d-flex justify-content-end">
            <%= form.submit "修正", class: "btn btn-primary" %>
          </div>
        </div>

        <div class="col-5 offset-2">
          <button class="btn btn-danger" type="submit">退会</button>
        </div>
      </div>
    <% end %>
  </main>
</body>

</html>
